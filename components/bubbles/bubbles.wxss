
.bubbles {
  display: flex;
  align-items: center;
  width: 100%;
  height: 39px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;
  margin-bottom: 1px;
}

.bubble {
  width: 20px;
  height: 20px;
  border-radius: 100px;
  border: 1px solid #2b2b2b;
  margin-right: 2px;
}

.bubble.picked {
  background-color: darkblue;
}