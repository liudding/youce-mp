page {
  background: #fff;
}

.page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  min-height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;

  margin-bottom: 16px;
}

.logo {
  width: 60px;
  height: 60px;
  border-radius: 100px;
}

.intro {
  margin-top: 16px;

  box-sizing: border-box;
  padding: 0 16px;

  font-size: 12px;
  color: #888;
}

.more {
  width: 100%;
  overflow: hidden;
}

.feedback {
  position: absolute;
  left: 0;
  top: 0;
  background-color: red;
  width: 100vw !important;
  height: 40px;
  opacity: 0;

  z-index: 2000;
}

.icon {
  display: inline-block;
  margin-right: 8px;

  color: #888;
}



.weui-cell__ft {
  font-size: 12px;
}

.weui-cell {
  padding: 12px 16px;
}

.my-mini-apps {
  display: flex;
}

.mini-app {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  justify-content: space-around;

  padding: 4px;

  margin-left: 8px;
}

.mini-app-logo {
  width: 35px;
  height: 35px;
  background: #EEE;

  border-radius: 100px;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
}

.mini-app-name {
  margin-top: 4px;
  color: gray;
  font-size: 12px;
}

