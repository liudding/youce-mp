page {
  background-color: #efefef;
}

.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;

  display: flex;
  justify-content: space-between;
  align-items: center;
}



.stats {
  margin-top: 8px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: gray;
  padding: 4px 8px;
  box-sizing: border-box;
}

.list {
  width: 100%;
  /* padding: 16px 0; */
  display: flex;
  flex-direction: column;
}

.question {
  display: flex;
  align-items: center;
  width: 100%;
  height: 39px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;
  margin-bottom: 1px;
}

.question .label {
  width: 30px;
  text-align: center;
  margin-right: 8px;
  text-align: right;
  font-size: 14px;
}

.bubble {
  width: 20px;
  height: 20px;
  border-radius: 100px;
  border: 1px solid darkblue;
  margin-right: 2px;
}

.bubble.picked {
  background-color: darkblue;
}

.edit-popup {
  width: 100vw;
  height: 100%;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;

  box-sizing: border-box;
  /* justify-content: center; */
}