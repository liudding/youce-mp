.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

