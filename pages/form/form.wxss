.stats {
  margin-top: 8px;
  width: 100%; display: flex; justify-content: space-between; font-size: 12px;
  color: gray;
  padding: 4px 8px;
  box-sizing: border-box;
}

.list {
  width: 100%;
  /* padding: 16px 0; */
  display: flex;
  flex-direction: column;
}
.question {
  display: flex;
  align-items: center;
  width: 100%;
  height: 39px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;
  margin-bottom: 1px;
}

.bubble {
  width: 20px;
  height: 20px;
  border-radius: 100px;
  border: 1px solid darkblue;
  margin-right: 2px;
}

.bubble.picked {
  background-color: darkblue;
}