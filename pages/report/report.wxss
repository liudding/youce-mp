page {
  background-color: #efefef;
}

.questions {
  width: 100%;
}

.question {
  /* width: 100%; */
  padding: 8px 8px;
  background-color: white;
  margin-bottom: 4px;
  margin-top: 8px;
}

.choices {
  display: flex;
  margin-top: 8px;
  flex-wrap:wrap;
}

.chioce {
  width: 53px;
  font-size: 15px;
  padding: 0px 8px;
  border: 1rpx solid gray;
  border-radius: 4px;
  margin-right: 4px;
  margin-bottom: 4px;
}


.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: white;
  padding: 0 8px;
  box-sizing: border-box;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup {
  position: relative;
  width: 100vw;
  height: 100%;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;

  box-sizing: border-box;
  /* justify-content: center; */
}

.answer-list {
  width: 100%;
}
