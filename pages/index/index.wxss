page {
  background-color: #efefef;
}

.quizzes {
  width: 100%;
  /*  */
}
.quiz {
  /* height: 60px; */
  background-color: white;
  display: flex;
  align-items: center;
  padding: 4px 8px;
  box-sizing: border-box;
  margin-bottom: 1px;
}

.quiz .infos {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.quiz-title {
  font-size: 16px;
  /* margin-bottom: 0px; */
}

.quiz-date {
  font-size: 10px;
  color: gray;
}


.quiz .buttons {
  display: flex;
}

.add {
  width: 50px;
  height: 50px;
  background-color: teal;
  border-radius: 100px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.edit-popup {
  width: 100vw;
  height: 100%;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;

  box-sizing: border-box;
  /* justify-content: center; */
}
